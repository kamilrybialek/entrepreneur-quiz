generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model QuizResponse {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  // User info
  name      String
  email     String
  ageRange  String

  // Quiz data
  answers   Json     // Array of 8 answers (1-4 for each question)
  totalScore Int     // 8-32
  level      Float   // 1-10
  type      String   // Explorer, Builder, Growth Builder, Creator

  @@index([createdAt])
  @@index([type])
}
